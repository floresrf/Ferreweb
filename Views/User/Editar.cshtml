@model userModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Lista de Usuarios</h3>
    </div>

    <div class="card-body">
        <form asp-action="Editar" asp-controller="User" method="post">

            <div class="mb-3">
                <label for="InputFName" class="form-label">Nombre*</label>
                <input asp-for="FirstName" name="FirstName" type="text" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="InputLName" class="form-label">Apellido*</label>
                <input asp-for="LastName" name="LastName" type="text" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="InputEmail" class="form-label">Correo Electronico*</label>
                <input asp-for="Email" name="Email" type="email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="InputPhone" class="form-label">Numero Celular*</label>
                <input asp-for="PhoneNumber" name="PhoneNumber" type="tel" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="InputPassword" class="form-label">Contraseña*</label>
                <input asp-for="Password" name="Password" type="password" class="form-control" required />
            </div>

            <br>
            <button type="submit" asp-for="ID" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="User" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>