@model productModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Lista Productos</h3>
    </div>

    <div class="card-body">
    <form asp-action="Eliminar" asp-controller="Product" method="post">
        
        <div class="alert alert-danger" role="alert">
                ¿Quiere eliminar @Html.DisplayTextFor(m => m.Name) (@Html.DisplayTextFor(m => m.ID))?
        </div>

        <button type="submit" asp-for="ID" class="btn btn-danger">Eliminar</button>
        <a asp-action="Listar" asp-controller="Product" class="btn btn-primary">Volver a la lista</a>

    </form>
    </div>
</div>