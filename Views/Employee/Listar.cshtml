@model List<employeeModel>
@{
    ViewData["Title"] = "Listar Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Lista de Empleados</h3>
    </div>

    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Employee"
           class="btn btn-success">Añadir nuevo Empleado</a>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Numero de Celular</th>
                        <th>Correo</th>
                        <th>Dirección</th>
                        <th>Salario</th>
                        @*<th>Acción</th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.BDate</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Email</td>
                            <td>@item.Direction</td>
                            <td>@item.Salary</td>
                            <td>
                                <a asp-action="Editar" asp-controller="Employee"
                                   class="btn btn-primary btn-sm mb-1" asp-route-ID="@item.ID">Editar</a>
                                <a asp-action="Eliminar" asp-controller="Employee"
                                   class="btn btn-danger btn-sm mb-1" asp-route-ID="@item.ID">Eliminar</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>